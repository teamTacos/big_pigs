{
  "defaultSeverity": "error",
  "extends": [
    "tslint-clean-code"
  ],
  "rules": {
    "triple-equals": [
      true,
      "allow-null-check",
      "allow-undefined-check"
    ],
    "no-forward-ref": false,
    "ban": [
      true,
      {
        "name": "fit",
        "message": "Don't keep jasmine focus methods"
      },
      {
        "name": "fdescribe",
        "message": "Don't keep jasmine focus methods"
      }
    ],
    "max-line-length": [
      true,
      140
    ],
    "no-inferrable-types": false,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "eofline": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-arg": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-bitwise": true,
    "no-shadowed-variable": true,
    "no-unused-expression": true,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "curly": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "no-console": [
      true,
      "debug",
      "error",
      "info",
      "log",
      "time",
      "timeEnd",
      "trace",
      "warn"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "method": "never",
        "constructor": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-construct": true,
    "no-duplicate-imports": true,
    "no-empty": true,
    "variable-name": false,
    "cyclomatic-complexity": [true, 1],

    // tslint-clean-code
    "try-catch-first": true,
    "max-func-args": [true, 3],
    "no-flag-args": true,
    "no-commented-out-code": true,
    "prefer-dry-conditionals": true,
    "no-complex-conditionals": true,
    "no-for-each-push": true,
    "newspaper-order": true,
    "id-length": true,
    "no-map-without-usage": true
//    "min-class-cohesion": true,
//    "no-feature-envy": true,
  },
  "rulesDirectory": [
    "tslint-no-unused-expression-chai"
  ]
}